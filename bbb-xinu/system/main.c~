process	main(void)
{

  char bbb_ipaddr[] = "192.168.1.101";
  char bbb_router[] = "192.168.1.255";

  /* Start the network */
  netstart(bbb_ipaddr,bbb_router);
  kprintf("\n...creating a shell\n");
  recvclr();
  resume(create(shell, 8192, 50, "shell", 1, CONSOLE));
//kprintf("After creating shell-resume");
int i;
for(i=0; i< ARP_SIZ; i++) {
		if ((arpcache[i].arstate == AR_RESOLVED) && (clktime - arpcache[i].time_of_entry) >= 20) {
			//arptr->arstate == AR_FREE;
			arpcache[i].arstate = AR_FREE;
                        printf("Entering to set state free");

		}
	} 
  
  /* Wait for shell to exit and recreate it */
  
  while (TRUE) {
    receive();
    sleepms(200);
    kprintf("\n\nMain process recreating shell\n\n");
    resume(create(shell, 4096, 20, "shell", 1, CONSOLE));
  }
  return OK;
}

